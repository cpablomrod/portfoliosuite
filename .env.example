# Portfolio Suite Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Email Configuration (for password reset functionality)
# For development - emails will be printed to console
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production with real email sending (recommended):
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Alternative email providers:
# Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com

# Email sender information
DEFAULT_FROM_EMAIL=noreply@portfoliosuite.com
SERVER_EMAIL=server@portfoliosuite.com

# Database (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Security (for production)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Alpha Vantage API key for stock data
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Production Database (PostgreSQL)
DATABASE_NAME=portfoliosuite
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Production Settings Module
DJANGO_SETTINGS_MODULE=portfolio_tracker.settings_production
